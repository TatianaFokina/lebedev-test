// ===================================================================================================================
// Header
// ===================================================================================================================
$header-height = 48px

.header
	padding 8px 0
	width 100%
	height $header-height
	position fixed
	background $brand-white
	border-bottom 1px solid $brand-2
	z-index 999
	
.content
	margin-top $header-height

.header__container
.header__acc-wrp
.acc
	@extend .d-flex
	align-items center
	
.header__acc-wrp
	margin-left auto




// Avatar, messages counter, account name
.acc__avatar
	margin-right 8px
	position relative
	&-img
		border 1px solid $brand-2
	&-counter
		width 12px
		height @width
		position absolute
		top 1px
		right 0
		@extend .d-flex
		justify-content center
		align-items center
		font-size $font-size-xxs
		color $brand-white
		background $brand-1
	&-img
	&-counter
		border-radius 50%

.acc__name
	font-size $font-size-sm
	color $brand-4

// Logo
.header__logo
	width 105.83px
	height 20px




// ===================================================================================================================
// Menu
// ===================================================================================================================

.acc-dropdown-wrp
	@extend .d-flex
	margin-left 23px

// Button
.acc-dropdown-btn
	@extend .btn-reset
	width 10px
	height 2px
	background-image url("../imgs/icons/ico-more.svg")
	background-position 0 50%
	background-size cover
	background-repeat no-repeat

