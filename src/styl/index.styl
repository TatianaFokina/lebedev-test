// ===================================================================================================================
// Sections
// ===================================================================================================================

// Styles for sections
.section-1
	margin-top 69px
	margin-bottom 124px
	
.section-2
	margin-bottom 71px
	
.section-3
	margin-bottom 113px

.section-4
	margin-bottom 63px
	
.section-5
	margin-bottom 117px
	
// Styles for section`s text
.section-subtitle
	margin-bottom 37px
	font-size $font-size-md
	font-weight 300

.section-subtitle
.article-remark
.article-pic-1__caption
.signup-pic__caption
	color $brand-3
	
.article-remark
.article-pic-1__caption
.signup-pic__caption
	font-size $font-size-sm
	font-weight 500




// ===================================================================================================================
// Section 1: checklist, thumbnails
// ===================================================================================================================

.section-1__checklist
	@extend .list-reset
	
// Hidden native checkbox
.checklist-item__input
	position absolute
	opacity 0
	
// Custom checkbox
.checklist-item
	margin-bottom 12px
	&__checkbox // label
		padding-left calc(24px + 16px)
		display inline-block
		position relative
		line-height 24px
	&__custom-input // span
		height 24px
		width @height
		position absolute
		top 0
		left 0
		border 1px solid $brand-3
		border-radius 3px
		cursor pointer
		// Hover effects
		&:hover
			border 1px solid $brand-1
		&:after // flag icon
			width 10px
			height 8px
			display none
			content ""
			position absolute
			left 6px
			top 7px
			background-image url("../imgs/icons/ico-flag.svg")
			background-repeat none
			background-size cover
			background-position 0 50%
		&:hover:after
			width 10px
			height 8px
			display block
			content ""
			position absolute
			left 6px
			top 7px
			background-image url("../imgs/icons/ico-flag.svg")
			background-repeat none
			background-size cover
			background-position 0 50%

// Checked effect
[type=checkbox]:checked ~ .checklist-item__custom-input
	background $brand-1
	border 1px solid $brand-1
	&:after
		display block




// Thumbnails
.section-1__pics
	@extend .d-flex
	height 184px

.section-1__pics__item-wrp
	position relative
	&:not(:last-of-type)
		margin-right 16px
	&:nth-child(odd):before
		margin-bottom 16px
		width 1px
		height 48px
		content ""
		display block
		position relative
		top 0
		left 50%
		transform translateX(-50%)
		background $brand-2
	&:nth-child(even):after
		margin-top 16px
		width 1px
		height 48px
		content ""
		display block
		position absolute
		bottom 0
		left 50%
		transform translateX(-50%)
		background $brand-2




// Next
.go-further
	margin-top 80px
	position relative
	display inline-block
	transform translateX(-50%)
	left 50%
	font-weight 500
	&:after
		width 13px
		height 48px
		content ""
		display block
		position relative
		transform translateX(-50%)
		left 50%
		font-weight bold
		background-image url("../imgs/icons/ico-further.svg")
		background-size cover
		background-position 0 50%
		background-repeat no-repeat




// ===================================================================================================================
// Section 2: cards, sliders
// ===================================================================================================================

// Slider
.slider
	@extend .d-flex
	align-items center
	position relative
	
//	Slider buttons
$slider-btn-space = -33.88px

.slider__btn
	width 11px
	height 27.5px
	@extend .btn-reset
	position absolute
	background-size cover
	background-position 0 50%
	background-repeat no-repeat
	&--prev
		left $slider-btn-space
		background-image url("../imgs/icons/ico-arrow-prev.svg")
	&--next
		right $slider-btn-space
		background-image url("../imgs/icons/ico-arrow-next.svg")

// Slider dots
.slider__dots
	width 8px
	height @width
	@extend .d-flex
	flex-wrap wrap
	justify-content center
	border 1px solid $brand-2
	border-radius 50%
	&:not(:last-of-type)
		margin-right 8px
	
.slider__dots__dot--active
	background $brand-1




// Cards
.card
	width 336px
	height auto
	position relative
	box-shadow 0 24px 40px rgba(57, 65, 74, 0.1)
	border-radius 8px
	&:not(:last-of-type)
		margin-right 16px
	// Add button
	&__btn-add
		width 48px
		height @width
		@extend .btn-reset
		position absolute
		top 216px
		right 24px
		background-image url("../imgs/icons/ico-add.svg")
		background-position center
		background-size 16.8px 16.8px
		background-repeat no-repeat
		background-color $brand-1
		border-radius 50%

// Card content
.card__content
	padding 32px 32px 32px 38px
	&-title
		margin-bottom 11px
		font-size $font-size-lg

// Rating
.card__content-rating
	margin-bottom 24px
	@extend .d-flex
	align-items center

.content-rating
	&__num
		font-size $font-size-sm
		color $brand-3
	&__counter
		margin-left 16px
		width 36px
		height 16px
		background-position 0 50%
		background-size cover
		background-repeat no-repeat

.card__rating__counter
	&--4
		background-image url("../imgs/icons/rating-bar--4.png")
	&--5
		background-image url("../imgs/icons/rating-bar--5.png")




// ===================================================================================================================
// Section 3: table, benefits cards
// ===================================================================================================================

// Table
// Common table styles
.cart
	width 100%
	border-collapse collapse

.cart__head-item
	font-size $font-size-sm
	font-weight 400
	color $brand-3
	
.cart__head-item
.cart__cell
	border-bottom 1px solid $brand-2

.cart__cell
.cart__head-item:not(:first-of-type)
	padding 16px

// Styles for table cells
.product
	&-img
		padding-right 22px
	&-name
		font-size $font-size-md
		font-weight 500

// Cell controls
// Reset button styles
.field-color
.field-size
.field-quantity__minus
.field-quantity__plus
.cart__btn-remove
	@extend .btn-reset
	
// Common styles for controls
.field-color
.field-size
.field-quantity__input
	width 88px
	height 40px
	border 1px solid $brand-2
	border-radius 2px
	position relative

.field-color:after
.field-size:after
	width 8.67px
	height 4px
	content ""
	position absolute
	top 18px
	right 21.67px
	background-image url("../imgs/icons/ico-down-arrow.svg")
	background-size cover
	background-position 0 50%
	background-repeat no-repeat

//	Color control
.field-color__current
	margin-left 4px
	width 32px
	height @width
	background $brand-3
	border-radius 1px
	
//	Size control
.field-size__current
	margin-left 16px
	text-align left
	font-size $font-size-md
	font-weight 500
	
// Quantity control
.field-quantity
	&__minus
	&__plus
		background-size cover
		background-position center
		background-repeat no-repeat
	&__minus
		width 8px
		height 0.67px
		background-image url("../imgs/icons/ico-minus.svg")
	&__plus
		width 8px
		height @width
		background-image url("../imgs/icons/ico-plus.svg")

// Remove control
.cart__btn-remove
	width 12px
	height @width
	background-image url("../imgs/icons/ico-remove.svg")
	background-size cover
	background-position center
	background-repeat no-repeat




// Purchase details
.cart
	&__purchase-details
		margin-top 28px
		@extend .d-flex
		flex-direction column
		align-items flex-end
	&__shiping-price
	&__total-price
		font-size $font-size-md
	&__shiping-price:not(:last-of-type)
		margin-bottom 19px
	&__purchase-details__label
		color $brand-3
		padding-right 16px
	&__actions
		margin-top 38px
		
// Cart actions
.cart__actions__lnk
	margin-right 41px
	position relative
	font-size $font-size-xs--2
	&:before // todo Прерывается!
		width 5px
		height 10.83px
		content ""
		position absolute
		top -2px
		left -8px
		background-image url("../imgs/icons/ico-right-arrow.svg")
		background-size cover
		background-position center
		background-repeat no-repeat

.cart__actions__btn
	padding 13px 9px 13px 42px
	background $brand-1
	color $brand-white
	border-radius 2px




