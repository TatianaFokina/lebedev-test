	margin-bottom 0
	padding 32px 45px 20px 0
	float left
	font-size $font-size-xlg
	font-weight 100
	color $brand-3
	text-transform uppercase
	text-shadow -5px 0 $warning-color




// ===================================================================================================================
// Section 6: sign up form and picture
// ===================================================================================================================

// Form
.signup__field
	position relative
	&:not(:last-of-type)
		margin-bottom 41px
	&-input
		width 100%
		padding 9px 0 7px 0
		border 0
		border-bottom 1px solid $brand-2
		outline none
	&-label
		position absolute
		bottom 7px
		font-size $font-size-sm
		transition all 150ms

// Float label animation
signup__field-input:focus + signup__field-label
signup__field-input:valid + signup__field-label
	font-size 75%
	transform translate3d(0, -100%, 0)




// Radio buttons
.radio
	&-label
		margin-bottom 12px
		line-height 1
		font-size $font-size-xs--2
	&-group
		@extend .d-flex
	&-group__field
	&-label
		color $brand-3
	&-group__field:not(:last-of-type)
		margin-right 12px
	&-group__field
		position relative
	&-group__field-label
		padding-left calc(24px + 8px)

// Hidden default input
.radio-group__field-input
	position absolute
	left 0
	top 0
	opacity 0

// Custom input
.radio-group__field-input + .radio-group__field-label:before
.radio-group__field-input + .radio-group__field-label:after
	content ""
	position absolute
	border-radius 50%
	
.radio-group__field-input + .radio-group__field-label:before
	width 24px
	height @width
	left 0
	top 0
	border 1px solid $brand-3

.radio-group__field-input + .radio-group__field-label:after
	left 6px
	top 6px
	border 6px solid $brand-1
	opacity 0
	transition opacity 0.2s ease-in-out

// Interactive
.radio-group__field .radio-group__field-input:checked + .radio-group__field-label:after
	opacity 1
.radio-group__field-input:checked + .radio-group__field-label:before
	border 1px solid $brand-1




// Margin for btn and radio buttons
.signup__radio
.signup-btn
	margin-top 32px

