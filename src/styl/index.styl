.signup-btn
	padding 10px 0
	width 100%
	@extend .btn-reset
	background $brand-1
	font-size $font-size-md
	color $brand-white
	border-radius 2px
	

// Form password list
.rules-list
	margin-top 21px
	@extend .list-reset
	&__item
		padding-left 12.75px
		position relative
		font-size $font-size-xs
		color $brand-3
		&:not(:last-of-type)
			margin-bottom 9px
	&__item:before
		width 7px
		height 5px
		display block
		content ""
		position absolute
		top 2px
		left 0
		background-image url("../imgs/icons/ico-bullet.svg")
		background-size cover
		background-position center
		background-repeat no-repeat




