// ===================================================================================================================
// Section 1: checklist, thumbnails
// ===================================================================================================================

.section-1__checklist
	@extend .list-reset

// Hidden native checkbox
.checklist-item__input
	position absolute
	opacity 0

// Custom checkbox
.checklist-item
	&:not(:last-of-type)
		margin-bottom 12px
	&__checkbox // label
		padding-left calc(24px + 16px)
		display inline-block
		position relative
		line-height 24px
	&__custom-input // span
		height 24px
		width @height
		position absolute
		top 0
		left 0
		border 1px solid $brand-3
		border-radius 3px
		cursor pointer
		// Hover effects
		&:hover
			border 1px solid $brand-1
		&:after // flag icon
			width 10px
			height 8px
			display none
			content ""
			position absolute
			left 6px
			top 7px
			background-image url("../imgs/icons/ico-flag--hover.svg")
			background-position 0 50%
			background-size cover
			background-repeat no-repeat
		&:hover:after
			width 10px
			height 8px
			display block
			content ""
			position absolute
			left 6px
			top 7px
			background-image url("../imgs/icons/ico-flag--hover.svg")
			background-size cover
			background-position 0 50%
			background-repeat no-repeat
		&:active
			background $hover-color
			border 1px solid $hover-color

// Checked effect
[type=checkbox]:checked ~ .checklist-item__custom-input
	background-image url("../imgs/icons/ico-flag--active.svg")
	background-repeat no-repeat
	background-size 12px 10px
	background-position center
	background-color $brand-1
	border 1px solid $brand-1
	&:after
		display none




// Thumbnails
.section-1__pics
	@extend .d-flex
	height 184px

.section-1__pics__item-wrp
	position relative
	&:not(:last-of-type)
		margin-right 16px
	&:nth-child(odd):before
		margin-bottom 16px
		width 1px
		height 48px
		content ""
		display block
		position relative
		top 0
		left 50%
		transform translateX(-50%)
		background $brand-2
	&:nth-child(even):after
		margin-top 16px
		width 1px
		height 48px
		content ""
		display block
		position absolute
		bottom 0
		left 50%
		transform translateX(-50%)
		background $brand-2




// Next
.go-further
	margin-top 80px
	position relative
	display inline-block
	transform translateX(-50%)
	left 50%
	font-weight 500
	&:after
		width 13px
		height 48px
		content ""
		display block
		position relative
		transform translateX(-50%)
		left 50%
		font-weight bold
		background-image url("../imgs/icons/ico-further.svg")
		background-size cover
		background-position 0 50%
		background-repeat no-repeat
